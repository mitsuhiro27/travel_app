
<h2 class="new-title">新しいアカウントを作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="new-signup">
  <div class="field">
    
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名"%>
  </div>

  <div class="field">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    
    <% if @minimum_password_length %>
    
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード確認" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
  </div>
<% end %>



<div class="login">
<%= render "devise/shared/links" %>
</div>
