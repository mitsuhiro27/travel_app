<!DOCTYPE html>
<html>
  <head>
    <title>TravelApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %> 
   <header class="header">
    <div class="header-inner">
     <div class="header-left-nav">
      
        <a href="/"><img alt="サイトロゴの画像" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png"></a>
        <form action="" accept-charset="UTF-8" method="get">
         <div class="header-search-area">
         <input type="text" name="area" id="area" valueclass="form-control" placeholder="エリア"> 
          <i class="fas fa-map-market-alt"></i>
         </div>  
         <div class="header-search-word">
          <input type="text" name="keyword" id="keyword" valueclass="form-control" placeholder="キーワード">
           <i class="fas fa-search"></i>
         </div>  
          <!--<input type="submit" name="commit" valueclass="d-none" date-disable-with> -->
        </form>  
      </div>  
       <div class="header-right-nav">
        <div class="nav-item">
         <a class="btn btn-del" href="/logout">ログアウト</a>
         <%= current_user.name %>
        
        </div>
      </div>
    </div>
  <% else %>
  <header class="header">
    <div class="header-inner">
     <div class="header-left-nav">
        <a href="/"><img alt="サイトロゴの画像" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png"></a>
        <form action="" accept-charset="UTF-8" method="get">
         <div class="header-search-area">
         <input type="text" name="area" id="area" valueclass="form-control" placeholder="エリア"> 
          <i class="fas fa-map-market-alt"></i>
         </div>  
         <div class="header-search-word">
          <input type="text" name="keyword" id="keyword" valueclass="form-control" placeholder="キーワード">
           <i class="fas fa-search"></i>
         </div>  
          <!--<input type="submit" name="commit" valueclass="d-none" date-disable-with> -->
        </form>  
      </div>  
       <div class="header-right-nav">
        <div class="nav-item">
         <a class="btn btn-primary" href="/login">ログイン</a> 
         <a class="btn btn-secondary" href="/signup">登録する</a>
        </div>
      </div>
    </div>
   </header>
   <% end %>

   
   


   <div id="wrapper">
    <%= yield %>
   </div> 

<div class="footer">
 <p>© 2022 POTEPAN.INC.</p>
</div> 
  </body>
</html>
